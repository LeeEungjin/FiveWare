<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="noticeMapper">
  
  	<select id="totalCount" resultType="int" parameterType="java.util.Map">
  		select nvl(count(temp), 0) from notice
  		<if test="kind=='title'">
  			where title like '%'||#{search}||'%'
  		</if>
  		<if test="kind=='writer'">
  			where writer like '%'||#{search}||'%'
  		</if>
  		<if test="kind=='temp'">
  			where temp like '%'||#{search}||'%'
  			<if test="temp=='회계부'">
  				and temp='회계부'
  			</if>
  			<if test="temp=='총무부'">
  				and temp='총무부'
  			</if>
  			<if test="temp=='인사부'">
  				and temp='인사부'
  			</if>
  			<if test="temp=='영업/구매부'">
  				and temp='영업/구매부'
  			</if>
  			<if test="temp=='마케팅부'">
  				and temp='마케팅부'
  			</if>
  		</if>
  		<if test="temp=='회계부'">
  				where temp='회계부'
  			</if>
  			<if test="temp=='총무부'">
  				where temp='총무부'
  			</if>
  			<if test="temp=='인사부'">
  				where temp='인사부'
  			</if>
  			<if test="temp=='영업/구매부'">
  				where temp='영업/구매부'
  			</if>
  			<if test="temp=='마케팅부'">
  				where temp='마케팅부'
  			</if>
  	</select>

  	<select id="selectFile" parameterType="int" resultType="com.five.ware.erp.notice.NoticeFileDTO">
  		select* from noticefile where num=#{num}
  	</select> 

  	<select id="selectList" resultType="com.five.ware.erp.notice.NoticeDTO" parameterType="java.util.Map">

  		select * from
  		(select rownum R, N.* from
  		(select * from notice
  		
  		<if test="kind=='code'">
  			where title like '%'||#{search}||'%'
  		</if>
  		
  		<if test="kind=='title'">
  			where title like '%'||#{search}||'%'
  		</if> 
  		<if test="kind=='writer'">
  			where writer like '%'||#{search}||'%'
  		</if>
  		<if test="kind=='temp'">
  			where temp like '%'||#{search}||'%'
  		</if>
  		<if test="temp=='회계부'">
  			and temp='회계부'
  		</if>
  		<if test="temp=='총무부'">
  			and temp='총무부'
  		</if>
  		<if test="temp=='인사부'">
  			and temp='인사부'
  		</if>
  		<if test="temp=='영업/구매부'">
  			and temp='영업/구매부'
  		</if>
  		<if test="temp=='마케팅부'">
  			and temp='마케팅부'
  		</if>
  		order by num desc) N)
  		where R between #{startRow} and #{lastRow}
  	</select>
  	
  	<resultMap type="com.five.ware.erp.notice.NoticeDTO" id="selectFile">
  		<id property="num" column="num"/>
  		<collection property="fileNames" column="num" ofType="com.five.ware.erp.notice.NoticeDTO" select="selectFile"></collection>
  	</resultMap>
  	
  	
  	<select id="selectOne" parameterType="java.lang.Integer" resultMap="selectFile">
  		select * from notice where num=#{num}
  	</select>
  	
  	<select id="selectPart" parameterType="java.util.Map" resultType="com.five.ware.erp.notice.NoticeDTO">
  		select * from 
  		(select rownum R, N.* from 
  		(select * from notice 
  		<if test="temp == '회계부'">
  			where temp='회계부'
  		</if>
  		<if test="temp == '총무부'">
  			where temp='총무부'
  		</if>
  		<if test="temp == '인사부'">
  			where temp='인사부'
  		</if>
  		<if test="temp == '영업/구매부'">
  			where temp='영업/구매부'
  		</if>
  		<if test="temp == '마케팅부'">
  			where temp='마케팅부'
  		</if>
  		order by num desc) N) 
  		where R between #{startRow} and #{lastRow}
  	</select>
  	
  	<update id="update" parameterType="com.five.ware.erp.notice.NoticeDTO">
  		update notice set title=#{title}, contents=#{contents} where num=#{num}
  	</update>
  	
  	<update id="hitUpdate" parameterType="int">
  		update notice set hit=hit+1 where num=#{num}
  	</update>
  	
  	<insert id="insert" parameterType="com.five.ware.erp.notice.NoticeDTO">
  		<selectKey keyProperty="num" resultType="int" order="BEFORE">
  			select notice_seq.nextval from dual
  		</selectKey>
  		insert into notice values(#{num}, #{temp}, #{writer}, #{title}, #{contents}, sysdate, 0)
  	</insert>
  	
  	<select id="getNum" parameterType="int" resultType="int">
  		select notice_seq.nextval from dual
  	</select>
  	
  	<delete id="delete" parameterType="int">
  		delete notice where num=#{num}
  	</delete>

  </mapper>