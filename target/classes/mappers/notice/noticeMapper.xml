  <mapper namespace="noticeMapper">
  
  	<select id="totalCount" resultType="int" parameterType="java.util.Map">
  		select nvl(count(part), 0) from notice
  		<if test="kind=='title'">
  			where title like '%'||#{search}||'%'
  		</if>
  		<if test="kind=='writer'">
  			where writer like '%'||#{search}||'%'
  		</if>
  		<if test="kind=='part'">
  			where part like '%'||#{search}||'%'
  			<if test="part=='회계부'">
  				and part='회계부'
  			</if>
  			<if test="part=='총무부'">
  				and part='총무부'
  			</if>
  			<if test="part=='인사부'">
  				and part='인사부'
  			</if>
  			<if test="part=='영업/구매부'">
  				and part='영업/구매부'
  			</if>
  			<if test="part=='마케팅부'">
  				and part='마케팅부'
  			</if>
  		</if>
  		<if test="part=='회계부'">
  				where part='회계부'
  			</if>
  			<if test="part=='총무부'">
  				where part='총무부'
  			</if>
  			<if test="part=='인사부'">
  				where part='인사부'
  			</if>
  			<if test="part=='영업/구매부'">
  				where part='영업/구매부'
  			</if>
  			<if test="part=='마케팅부'">
  				where part='마케팅부'
  			</if>
  	</select>
  	
  	

  	

